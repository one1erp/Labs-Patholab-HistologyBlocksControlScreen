                    <Setter Property="Background" Value="#3399FF" />
                </Trigger>
                <DataTrigger Binding="{Binding ScannedByUser, Mode=TwoWay}" Value="True">
                    <Setter Property="Background" Value="#FF9933" />
                </DataTrigger>
                <!--<Trigger Property="IsKeyboardFocusWithin" Value="True">
